<UserControl x:Class="GreenField.Login.App.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://www.codeplex.com/prism"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    mc:Ignorable="d" Width="1200" Height="1000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">   
    <Grid x:Name="LayoutRoot">
        <Image Source="Images/ASHEMMBackground.jpg" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="333"/>
                <RowDefinition Height="667*"/>                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1087"/>
                <ColumnDefinition Width="63*"/>
            </Grid.ColumnDefinitions>
            <ContentControl Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Margin="60"
                            prism:RegionManager.RegionName="MainRegion"
                            HorizontalAlignment="Left"/>            
        </Grid>
    </Grid>
</UserControl>
