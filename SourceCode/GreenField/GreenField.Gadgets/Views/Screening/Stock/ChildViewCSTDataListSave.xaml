<controls:ChildWindow x:Class="GreenField.Gadgets.Views.ChildViewCSTDataListSave"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:helpers="clr-namespace:GreenField.Gadgets.Helpers"  
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    Title="Custom Screening Tool - Data List Save" 
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
    mc:Ignorable="d" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    d:DesignHeight="150" d:DesignWidth="347">

    <Grid x:Name="LayoutRoot" Margin="2" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="txtMessage" Grid.Row="0" FontFamily="Arial" FontSize="7" Foreground="Red" HorizontalAlignment="Left" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>
        
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="left"
                    VerticalAlignment="Top">
            <TextBlock Text="Name:" 
                       Width="120" FontFamily="Arial"
                       FontSize="11"
                       FontWeight="Normal"/>
            <TextBox x:Name="txtDataListName" 
                       TextAlignment="Left"
                        Margin="10,0,0,0"
                       Width="194" FontFamily="Arial"
                       FontSize="11"
                       FontWeight="Normal"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10,10,10,10">
                <RadioButton x:Name="rbtnPrivate" Content="Private" Margin="5,0,0,0" 
                             GroupName="Accessbitlity" 
                             Checked="HandleCheck"/>
                <RadioButton x:Name="rbtnPublic" Content="Public" Margin="5,0,0,0" 
                             GroupName="Accessbitlity" 
                             Checked="HandleCheck"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="left"
                    VerticalAlignment="Center">
            <Button x:Name="btnSave" 
                    Content="Save"
                    Margin="50,0,0,0"
                    Width="75" Height="23" IsEnabled="True"
                    HorizontalAlignment="Right" Click="btnSave_Click" />
            <Button x:Name="btnCancel" 
                    Content="Cancel"
                    Width="75" Height="23"
                    Margin="50,0,0,0" Click="btnCancel_Click" />
        </StackPanel>
    </Grid>
</controls:ChildWindow>