        <Border Grid.Row="1" Grid.Column="2">
            <TextBlock  Margin="2,0,0,0" Text="Y2"  HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle}"   FontWeight="Bold"  />
