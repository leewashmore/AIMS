        <Border Grid.Row="0" Grid.Column="0">
            <TextBlock  Margin="2,0,0,0" Text=""  HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource TextBlockStyle}"  FontWeight="Bold" />
        </Border>
        <Border Grid.Row="0" Grid.Column="1">
            <TextBlock  Margin="2,0,0,0" Text="{Binding }" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource TextBlockStyle}"   FontWeight="Bold"  />               
