        <Border Grid.Row="1" Grid.Column="1">
            <TextBlock  Margin="2,0,0,0" Text="Y1"  HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle}"   FontWeight="Bold"  />
