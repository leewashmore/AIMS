             xmlns:telerikQuickStart="clr-namespace:Telerik.Windows.Controls.QuickStart;assembly=Telerik.Windows.Controls"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">

    <helpers:ViewBaseUserControl.Resources>
        <ResourceDictionary>
            <helpers:PercentageValueConverter x:Key="ConvertPercentageValue"/>
            <helpers:PercentageValueConverterOneDec x:Key="ConvertPercentageValueOneDec"/>
            <pd:ColumnHeaders x:Key="ColumnHeaders"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GreenField.Gadgets;component/Assets/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </helpers:ViewBaseUserControl.Resources>
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Portfolio Holdings" HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontWeight="Bold" Style="{StaticResource TextBlockStyle}" Margin="-152,0,0,0" />
        </Grid>

        <!--Export Controls-->
        <Grid  HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <telerik:RadRadioButton GroupName="{Binding Id}" Grid.Column="0" Content="Group Issuers" Style="{StaticResource RadRadioButtonStyle}" IsChecked="{Binding IsHoldingsGroupedByIssuer,Mode=TwoWay}" MinHeight="15" VerticalAlignment="Center" VerticalContentAlignment="Center" ToolTipService.ToolTip="Group securities issued by same issuer" IsEnabled="{Binding EnableLookThru}"/>
            <telerik:RadRadioButton GroupName="{Binding Id}" Grid.Column="1" Content="Group Securities" Style="{StaticResource RadRadioButtonStyle}" IsChecked="{Binding IsHoldingsGrouped,Mode=TwoWay}" MinHeight="15" VerticalAlignment="Center" VerticalContentAlignment="Center" ToolTipService.ToolTip="Group same securities into one record" IsEnabled="{Binding EnableLookThru}"/>

    <!--
            <CheckBox Content="Group Issuers" Grid.Column="0" ToolTipService.ToolTip="Group same securities into one record"
                      Style="{StaticResource CheckBoxStyle}" MinHeight="15" VerticalAlignment="Center"
                      VerticalContentAlignment="Center" IsChecked="{Binding IsHoldingsGroupedByIssuer,Mode=TwoWay}" IsEnabled="{Binding EnableLookThru}" 
                      />
            <CheckBox Content="Group Securities" Grid.Column="0" ToolTipService.ToolTip="Group securities issued by same issuer"
                      Style="{StaticResource CheckBoxStyle}" MinHeight="15" VerticalAlignment="Center"
                      VerticalContentAlignment="Center" IsChecked="{Binding IsHoldingsGrouped,Mode=TwoWay}" IsEnabled="{Binding EnableLookThru}" 
                      />-->
            <CheckBox Content="Include Benchmark" Grid.Column="2" ToolTipService.ToolTip="Include Benchmark Securities"
                      Style="{StaticResource CheckBoxStyle}" MinHeight="15" VerticalAlignment="Center"
                      VerticalContentAlignment="Center" IsChecked="{Binding GetBenchmarkData,Mode=TwoWay}" 
                      Checked="CheckBox_Checked"  />
