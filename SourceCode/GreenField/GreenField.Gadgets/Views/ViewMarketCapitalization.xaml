<helpers:ViewBaseUserControl x:Class="GreenField.Gadgets.Views.ViewMarketCapitalization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:GreenField.Gadgets.Helpers"
             
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Portfolio" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Benchmark" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Weighted Average-->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" Text="Weighted Average" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioWeightedAverage, StringFormat=\{0:n0\}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkWeightedAverage, StringFormat=\{0:n0\}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Weighted Median-->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,5,0,0" Text="Weighted Median" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioWeightedMedian, StringFormat=\{0:n0\}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkWeightedMedian, StringFormat=\{0:n0\}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Mega Bucket-->
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock Text="Mega" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text=" > " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.MegaLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioMegaShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkMegaShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Large Bucket-->
        <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock Text="Large " FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.LargeLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text=" - " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.MegaLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Row="4" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioLargeShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkLargeShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Medium Bucket-->
        <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock Text="Medium " FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.MediumLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text=" - " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.LargeLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Row="5" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioMediumShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="5" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkMediumShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Small Bucket-->
        <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock Text="Small " FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.SmallLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text=" - " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.MediumLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Row="6" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioSmallShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="6" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkSmallShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Micro Bucket-->
        <StackPanel Grid.Row="7" Grid.Column="0" Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock Text="Micro" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text=" &lt; " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding MarketCapitalizationInfo.SmallLowerLimit}" HorizontalAlignment="Left" VerticalAlignment="Center"/>            
        </StackPanel>
        <TextBlock Grid.Row="7" Grid.Column="1" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.PortfolioMicroShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="7" Grid.Column="2" Margin="0,5,0,0" Text="{Binding MarketCapitalizationInfo.BenchmarkMicroShare, StringFormat=\{0:n2\}%}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</helpers:ViewBaseUserControl>
