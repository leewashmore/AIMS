<controls:ChildWindow x:Class="GreenField.Gadgets.Views.ChildViewInsertEntity"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:helpers="clr-namespace:GreenField.Gadgets.Helpers"  FontSize="8" FontFamily="Arial"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Title="Insert Entity" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="0" d:DesignWidth="400">

    <controls:ChildWindow.Resources>
        <helpers:FlattenGroupConverter x:Key="FlattenGroupConverter"/>
        <helpers:ItemStyleSelector x:Key="ItemStyleSelector">
            <helpers:ItemStyleSelector.GroupStyle>
                <Style TargetType="ContentControl">
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </helpers:ItemStyleSelector.GroupStyle>
            <helpers:ItemStyleSelector.ItemStyle>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding LongName}" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="(" />
                                        <TextBlock Text="{Binding ShortName}" />
                                        <TextBlock Text=")" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </helpers:ItemStyleSelector.ItemStyle>
        </helpers:ItemStyleSelector>
    </controls:ChildWindow.Resources>
    
    <Grid x:Name="LayoutRoot" Margin="2" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Group" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="8" FontFamily="Arial"/>
                <TextBox x:Name="txtGroupName" TextWrapping="Wrap" Width="353" Margin="2,0,0,0" FontSize="8" FontFamily="Arial" TextChanged="txtGroupName_TextChanged"/>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>            
            </Grid.ColumnDefinitions>
            <telerik:RadToggleButton Grid.Column="0" Content="Security" FontSize="8" FontFamily="Arial" IsChecked="{Binding SecurityToggleChecked, Mode=TwoWay}"/>
            <telerik:RadToggleButton Grid.Column="1" Content="Benchmark / Index" FontSize="8" FontFamily="Arial" IsChecked="{Binding BenchmarkToggleChecked, Mode=TwoWay}"/>
            <telerik:RadToggleButton Grid.Column="2" Content="Commodity" FontSize="8" FontFamily="Arial" IsChecked="{Binding CommodityToggleChecked, Mode=TwoWay}"/>            
        </Grid>
        <Grid Grid.Row="2" Margin="0,2,0,0">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <!--ItemsSource="{Binding EntitySelectionGroupInfo.View.Groups, Converter={StaticResource FlattenGroupConverter}}"-->
                <!--ItemContainerStyleSelector="{StaticResource ItemStyleSelector}"-->
                <telerik:RadComboBox x:Name="cmbEntitySelection" Width="378" FontSize="8" FontFamily="Arial"
                                     ItemsSource="{Binding EntityFilterSelectionInfo}" SelectionChanged="cmbEntitySelection_SelectionChanged"
                                     Text="{Binding EntitySelectionEnteredText, Mode=TwoWay}" 
                                     SelectedItem="{Binding SelectedEntity, Mode=TwoWay}"                                     
                                     IsEditable="True" telerik:TextSearch.TextPath="LongName" EmptyText="Search Entity..." 
                                     CanAutocompleteSelectItems="True" CanKeyboardNavigationSelectItems="False"
                                     OpenDropDownOnFocus="True" StaysOpenOnEdit="True" TextOptions.TextHintingMode="Fixed"
                                     HorizontalAlignment="Right" IsTextSearchEnabled="False">
                    <telerik:RadComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </telerik:RadComboBox.ItemsPanel>
                    <telerik:RadComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LongName}"/>
                                <TextBlock Text="{Binding ShortName, StringFormat=' (\{0\}, '}"/>
                                <TextBlock Text="{Binding SecurityType, StringFormat='\{0\}:'}"/>
                                <TextBlock Text="{Binding InstrumentID, StringFormat='\{0\})'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadComboBox.ItemTemplate>
                </telerik:RadComboBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2,0,0" Visibility="{Binding ReturnTypeSelectionVisibility}">
                    <telerik:RadRadioButton x:Name="rbtnTotal" FontSize="8" FontFamily="Arial" Content="Total Return" IsChecked="{Binding TotalReturnTypeChecked, Mode=TwoWay}"/>
                    <telerik:RadRadioButton Margin="2,0,0,0" x:Name="rbtnNet" FontSize="8" FontFamily="Arial" Content="Price Return" IsChecked="{Binding PriceReturnTypeChecked, Mode=TwoWay}"/>                        
                    </StackPanel>
            </StackPanel>
        </Grid>

        <telerik:RadButton x:Name="CancelButton" FontSize="8" FontFamily="Arial" Content="Cancel" Click="CancelButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,2,0,0" Grid.Row="3" />
        <telerik:RadButton x:Name="OKButton" FontSize="8" FontFamily="Arial" Content="OK" Click="OKButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,2,79,0" Grid.Row="3" />

    </Grid>
</controls:ChildWindow>