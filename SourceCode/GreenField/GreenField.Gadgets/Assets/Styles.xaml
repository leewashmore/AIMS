<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <!--Grid Styles-->
    <!--###########-->

    <!--GridViewHeaderCellStyle-->
    <Style TargetType="telerik:GridViewHeaderCell" x:Name="GridViewHeaderCellStyle">
        <Setter Property="Background" Value="#9F1D21" />
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="7"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>

    <!--GridViewCellStyle-->
    <Style TargetType="telerik:GridViewCell" x:Name="GridViewCellStyle">
        <Setter Property="Height" Value="12"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>

    <!--GridViewRowStyle-->
    <Style TargetType="telerik:GridViewRow" x:Name="GridViewRowStyle">
        <Setter Property="Height" Value="15"/>
    </Style>


    <Style TargetType="telerik:GridViewGroupRow" x:Name="GridViewGroupRowStyle">
        <Setter Property="Background" Value="#9F1D21"/>
    </Style>
    <!--Grid Styles End-->

    <!--GridViewHeaderHeaderRowStyle-->
    <Style TargetType="telerik:GridViewHeaderRow" x:Name="GridViewHeaderRowStyle">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Background" Value="#9F1D21"/>
        <Setter Property="MaxHeight" Value="15"/>
    </Style>


    <!--GridViewGroupPanelStyle-->
    <Style TargetType="telerik:GridViewGroupPanel" x:Name="GridViewGroupPanelStyle">
        <Setter Property="Height" Value="10"/>
        <Setter Property="FontSize" Value="7"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="#9F1D21"/>
    </Style>

    <!--Chart Item Label Style-->
    <Style x:Key="ItemLabelStyle"
       TargetType="TextBlock">
        <Setter Property="Foreground"
            Value="Black" />
        <Setter Property="FontSize"
            Value="8" />
        <Setter Property="FontStyle"
            Value="Normal" />
    </Style>

    <!--Chart Legend Style-->
    <Style x:Key="ChartLegendStyle" TargetType="telerik:ChartLegend">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="LegendItemMarkerShape" Value="SquareRounded"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Width" Value="20"/>
    </Style>

    <!--Chart Legend Style-->
    <Style x:Key="ChartLegendItemStyle" TargetType="telerik:ChartLegendItem">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    
</ResourceDictionary>
