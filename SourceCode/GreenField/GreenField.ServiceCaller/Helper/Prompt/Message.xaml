<controls:ChildWindow x:Class="GreenField.ServiceCaller.Message"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="Auto">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtMessage" FontFamily="Arial" FontSize="8" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
        <telerik:RadButton x:Name="OKButton" Content="OK" Click="OKButton_Click" FontFamily="Arial" FontSize="8" Width="75" HorizontalAlignment="Right" Margin="0,2,79,0" Grid.Row="1" />
        <telerik:RadButton x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" FontFamily="Arial" FontSize="8" Width="75" HorizontalAlignment="Right" Margin="0,2,0,0" Grid.Row="1" />
    
    </Grid>
</controls:ChildWindow>